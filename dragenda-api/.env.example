# API Configuration
EXPO_PUBLIC_PORT=10000
EXPO_PUBLIC_API_KEY=your_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW=900000
GENERAL_RATE_LIMIT_MAX=100

# Database Configuration
DB_PATH=./database/dragenda.db

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Tipo de Banco de Dados (sqlite ou postgres)
DB_TYPE=sqlite

# Configurações do SQLite
SQLITE_PATH=./src/database/banco.db

# Configurações do PostgreSQL (necessário apenas se DB_TYPE=postgres)
PG_USER=postgres
PG_PASSWORD=postgres
PG_HOST=localhost
PG_DATABASE=dragenda
PG_PORT=5432

# Configurações JWT
JWT_SECRET=sua_chave_secreta_muito_segura
JWT_EXPIRATION=24h

# Outras configurações
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100